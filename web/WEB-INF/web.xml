<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- center-info servlet -->
    <servlet>
        <servlet-name>center-info</servlet-name>
        <servlet-class>app.servlets.CenterInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>center-info</servlet-name>
        <url-pattern>/center-info</url-pattern>
    </servlet-mapping>

    <!-- trip-aims servlet -->
    <servlet>
        <servlet-name>trip-aims</servlet-name>
        <servlet-class>app.servlets.TripAimsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>trip-aims</servlet-name>
        <url-pattern>/visa-types</url-pattern>
    </servlet-mapping>

    <!-- visa-requirements servlet -->
    <servlet>
        <servlet-name>visa-requirements</servlet-name>
        <servlet-class>app.servlets.VisaRequirementsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>visa-requirements</servlet-name>
        <url-pattern>/c-visa</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>visa-requirements</servlet-name>
        <url-pattern>/d-visa</url-pattern>
    </servlet-mapping>

    <!-- login servlet -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>app.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- registration servlet -->
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>app.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <!-- client filter -->
    <filter>
        <filter-name>client-filter</filter-name>
        <filter-class>app.servlets.filters.ClientFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>client-filter</filter-name>
        <url-pattern>/client-page/*</url-pattern>
    </filter-mapping>

    <!-- admin filter -->
    <filter>
        <filter-name>admin-filter</filter-name>
        <filter-class>app.servlets.filters.AdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>admin-filter</filter-name>
        <url-pattern>/admin-page/*</url-pattern>
    </filter-mapping>

    <!-- client-page servlet -->
    <servlet>
        <servlet-name>client-page</servlet-name>
        <servlet-class>app.servlets.ClientPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>client-page</servlet-name>
        <url-pattern>/client-page</url-pattern>
    </servlet-mapping>

    <!-- admin-page servlet -->
    <servlet>
        <servlet-name>admin-page</servlet-name>
        <servlet-class>app.servlets.AdminPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>admin-page</servlet-name>
        <url-pattern>/admin-page</url-pattern>
    </servlet-mapping>

    <!-- super-admin-page servlet -->
    <servlet>
        <servlet-name>super-admin-page</servlet-name>
        <servlet-class>app.servlets.SuperAdminPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>super-admin-page</servlet-name>
        <url-pattern>/super-admin-page</url-pattern>
    </servlet-mapping>

    <!-- add-admin servlet -->
    <servlet>
        <servlet-name>add-admin</servlet-name>
        <servlet-class>app.servlets.AddAdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add-admin</servlet-name>
        <url-pattern>/add-admin</url-pattern>
    </servlet-mapping>

    <!-- delete-admin servlet -->
    <servlet>
        <servlet-name>delete-admin</servlet-name>
        <servlet-class>app.servlets.DeleteAdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete-admin</servlet-name>
        <url-pattern>/delete-admin</url-pattern>
    </servlet-mapping>

    <!-- update-admin servlet -->
    <servlet>
        <servlet-name>update-admin</servlet-name>
        <servlet-class>app.servlets.UpdateAdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>update-admin</servlet-name>
        <url-pattern>/update-admin</url-pattern>
    </servlet-mapping>

    <!-- logout servlet -->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>app.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- DB connection -->
    <resource-ref>
        <res-ref-name>jdbc/visa-pool</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>