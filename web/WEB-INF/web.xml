<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- center-info servlet -->
    <servlet>
        <servlet-name>center-info</servlet-name>
        <servlet-class>app.servlets.CenterInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>center-info</servlet-name>
        <url-pattern>/center-info</url-pattern>
    </servlet-mapping>

    <!-- trip-aims servlet -->
    <servlet>
        <servlet-name>trip-aims</servlet-name>
        <servlet-class>app.servlets.TripAimsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>trip-aims</servlet-name>
        <url-pattern>/visa-types</url-pattern>
    </servlet-mapping>

    <!-- visa-requirements servlet -->
    <servlet>
        <servlet-name>visa-requirements</servlet-name>
        <servlet-class>app.servlets.VisaRequirementsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>visa-requirements</servlet-name>
        <url-pattern>/visa-types/c-visa</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>visa-requirements</servlet-name>
        <url-pattern>/visa-types/d-visa</url-pattern>
    </servlet-mapping>

    <!-- login servlet -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>app.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- registration servlet -->
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>app.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <!-- client filter -->
    <filter>
        <filter-name>client-filter</filter-name>
        <filter-class>app.servlets.filters.ClientFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>client-filter</filter-name>
        <url-pattern>/client-page/*</url-pattern>
    </filter-mapping>

    <!-- book-appointment filter -->
    <filter>
        <filter-name>book-appointment-filter</filter-name>
        <filter-class>app.servlets.filters.BookAppointmentFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>book-appointment-filter</filter-name>
        <url-pattern>/book-appointment</url-pattern>
    </filter-mapping>

    <!-- admin filter -->
    <filter>
        <filter-name>admin-filter</filter-name>
        <filter-class>app.servlets.filters.AdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>admin-filter</filter-name>
        <url-pattern>/admin-page</url-pattern>
    </filter-mapping>

    <!-- operator filter -->
    <filter>
        <filter-name>operator-filter</filter-name>
        <filter-class>app.servlets.filters.OperatorFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>operator-filter</filter-name>
        <url-pattern>/operator-page/*</url-pattern>
    </filter-mapping>

    <!-- manager filter -->
    <filter>
        <filter-name>manager-filter</filter-name>
        <filter-class>app.servlets.filters.ManagerFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>manager-filter</filter-name>
        <url-pattern>/manager-page/*</url-pattern>
    </filter-mapping>

    <!-- director filter -->
    <filter>
        <filter-name>director-filter</filter-name>
        <filter-class>app.servlets.filters.DirectorFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>director-filter</filter-name>
        <url-pattern>/director-page/*</url-pattern>
    </filter-mapping>

    <!-- client-page servlet -->
    <servlet>
        <servlet-name>client-page</servlet-name>
        <servlet-class>app.servlets.ClientPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>client-page</servlet-name>
        <url-pattern>/client-page</url-pattern>
    </servlet-mapping>

    <!-- book-appointment servlet -->
    <servlet>
        <servlet-name>book-appointment</servlet-name>
        <servlet-class>app.servlets.BookAppointmentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>book-appointment</servlet-name>
        <url-pattern>/book-appointment</url-pattern>
    </servlet-mapping>

    <!-- operator-page servlet -->
    <servlet>
        <servlet-name>operator-page</servlet-name>
        <servlet-class>app.servlets.OperatorPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>operator-page</servlet-name>
        <url-pattern>/operator-page</url-pattern>
    </servlet-mapping>

    <!-- manager-page servlet -->
    <servlet>
        <servlet-name>manager-page</servlet-name>
        <servlet-class>app.servlets.ManagerPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>manager-page</servlet-name>
        <url-pattern>/manager-page</url-pattern>
    </servlet-mapping>

    <!-- director-page servlet -->
    <servlet>
        <servlet-name>director-page</servlet-name>
        <servlet-class>app.servlets.DirectorPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>director-page</servlet-name>
        <url-pattern>/director-page</url-pattern>
    </servlet-mapping>

    <!-- add-operator servlet -->
    <servlet>
        <servlet-name>add-operator</servlet-name>
        <servlet-class>app.servlets.AddOperatorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add-operator</servlet-name>
        <url-pattern>/manager-page/add-operator</url-pattern>
    </servlet-mapping>

    <!-- update-operator servlet -->
    <servlet>
        <servlet-name>update-operator</servlet-name>
        <servlet-class>app.servlets.UpdateOperatorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>update-operator</servlet-name>
        <url-pattern>/manager-page/update-operator</url-pattern>
    </servlet-mapping>

    <!-- delete-operator servlet -->
    <servlet>
        <servlet-name>delete-operator</servlet-name>
        <servlet-class>app.servlets.DeleteOperatorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete-operator</servlet-name>
        <url-pattern>/manager-page/delete-operator</url-pattern>
    </servlet-mapping>

    <!-- add-employee servlet -->
    <servlet>
        <servlet-name>add-employee</servlet-name>
        <servlet-class>app.servlets.AddEmployeeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add-employee</servlet-name>
        <url-pattern>/director-page/add-employee</url-pattern>
    </servlet-mapping>

    <!-- delete-employee servlet -->
    <servlet>
        <servlet-name>delete-employee</servlet-name>
        <servlet-class>app.servlets.DeleteEmployeeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete-employee</servlet-name>
        <url-pattern>/director-page/delete-employee</url-pattern>
    </servlet-mapping>

    <!-- update-employee servlet -->
    <servlet>
        <servlet-name>update-employee</servlet-name>
        <servlet-class>app.servlets.UpdateEmployeeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>update-employee</servlet-name>
        <url-pattern>/director-page/update-employee</url-pattern>
    </servlet-mapping>

    <!-- logout servlet -->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>app.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- error-handler servlet -->
    <servlet>
        <servlet-name>error-handler</servlet-name>
        <servlet-class>app.servlets.ErrorHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>error-handler</servlet-name>
        <url-pattern>/error-handler</url-pattern>
    </servlet-mapping>

    <error-page>
        <location>/error-handler</location>
    </error-page>

    <!-- DB connection -->
    <resource-ref>
        <res-ref-name>jdbc/visa-pool</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>