<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Specify a JDBC datasource -->
    <Resource name="jdbc/visa-pool"
              auth="Container"
              type="javax.sql.DataSource"
              maxActive="32"
              maxIdle="8"
              maxWait="10000"
              username="postgres"
              password="postgres"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/online_visa_center"
    />
</Context>